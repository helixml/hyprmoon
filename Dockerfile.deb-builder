# Make debian/rules executable
RUN chmod +x debian/rules

# Build the debian package with mount caches
RUN --mount=type=cache,target=/workspace/hyprmoon-1.0/obj-x86_64-linux-gnu \
    --mount=type=cache,target=/var/cache/apt \
    --mount=type=cache,target=/root/.cache \
    echo "Building HyprMoon debian package..." && \
    dpkg-buildpackage -us -uc -b && \
    echo "Package build completed"

# Copy the built packages to the output directory
RUN mkdir -p /output && \
    cp ../*.deb /output/ && \
    cp ../*.changes /output/ && \
    ls -la /output/

# Create a script to copy packages to bind mount
RUN cat > /copy-packages.sh << 'EOF'
#!/bin/bash
echo "Copying HyprMoon packages to /output-bind..."
mkdir -p /output-bind
cp /output/*.deb /output-bind/ 2>/dev/null || true
cp /output/*.changes /output-bind/ 2>/dev/null || true
echo "Available packages:"
ls -la /output-bind/
echo "Package info:"
for deb in /output-bind/*.deb; do
    if [ -f "$deb" ]; then
        echo "=== $deb ==="
        dpkg-deb -I "$deb"
        echo ""
    fi
done
EOF

RUN chmod +x /copy-packages.sh

# Default command copies packages to bind mount
CMD ["/copy-packages.sh"]