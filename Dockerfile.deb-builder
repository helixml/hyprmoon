# HyprMoon Debian Package Builder
FROM ubuntu:25.04

# Install build dependencies and packaging tools
RUN --mount=type=cache,target=/var/cache/apt \
    --mount=type=cache,target=/var/lib/apt \
    apt-get update && apt-get install -y \
    # Build essentials
    build-essential cmake ninja-build meson pkgconf \
    git wget curl ca-certificates \
    # Ubuntu's exact hyprland build dependencies
    chrpath cpio debhelper-compat hwdata \
    hyprland-protocols hyprwayland-scanner \
    libcairo-dev libdrm-dev libxkbcommon-dev \
    libegl-dev libegl1-mesa-dev libgles-dev \
    libhyprlang-dev libhyprcursor-dev libhyprutils-dev \
    libinput-dev libpango1.0-dev libpixman-1-dev \
    libseat-dev libtomlplusplus-dev libudev-dev \
    libudis86-dev libwayland-dev libwlroots-0.18-dev \
    libxcb-errors-dev libxcb-util-dev \
    wayland-protocols xwayland \
    # Additional moonlight dependencies
    libcurl4-openssl-dev libssl-dev \
    libgstreamer1.0-dev libgstreamer-plugins-base1.0-dev \
    libgstreamer-plugins-bad1.0-dev gstreamer1.0-plugins-base \
    gstreamer1.0-plugins-good gstreamer1.0-plugins-bad \
    gstreamer1.0-plugins-ugly gstreamer1.0-libav \
    libenet-dev libfmt-dev \
    libboost-system-dev libboost-filesystem-dev \
    libboost-locale-dev libboost-thread-dev \
    libnice-dev libjsoncpp-dev libpulse-dev \
    # Additional dependencies in our debian/control
    libgdk-pixbuf2.0-dev libzip-dev librsvg2-dev libmagic-dev \
    # Missing moonlight dependencies
    libpci-dev \
    # Debian packaging tools
    dh-make devscripts fakeroot lintian \
    && rm -rf /var/lib/apt/lists/*

# Set up workspace
WORKDIR /workspace

# Copy the source code
COPY . /workspace/hyprmoon-src

# Create debian package structure
RUN mkdir -p hyprmoon-1.0 && \
    cp -r hyprmoon-src/* hyprmoon-1.0/ && \
    cd hyprmoon-1.0 && \
    echo "Fixing compiler arguments..." && \
    sed -i 's/-D_FORTIFY_SOURCE=2,//' meson.build && \
    sed -i 's/subdirs: \[,/subdirs: [/' meson.build && \
    echo "Fixed compiler arguments"

WORKDIR /workspace/hyprmoon-1.0

# Create debian packaging directory and control files
RUN mkdir -p debian && \
    cat > debian/control << 'EOF'
Source: hyprmoon
Section: x11
Priority: optional
Maintainer: HyprMoon Developer <dev@hyprmoon.local>
Build-Depends: debhelper (>= 12),
               build-essential,
               cmake,
               ninja-build,
               meson,
               pkg-config,
               libwayland-dev,
               libinput-dev,
               libxkbcommon-dev,
               libpixman-1-dev,
               libcairo-dev,
               libdrm-dev,
               libxcb1-dev,
               libpango1.0-dev,
               libgdk-pixbuf2.0-dev,
               libseat-dev,
               libudev-dev,
               libsystemd-dev,
               libtomlplusplus-dev,
               libzip-dev,
               librsvg2-dev,
               libmagic-dev,
               libhyprlang-dev,
               libhyprutils-dev,
               libcurl4-openssl-dev,
               libssl-dev,
               libgstreamer1.0-dev,
               libgstreamer-plugins-base1.0-dev,
               libenet-dev,
               libfmt-dev,
               libboost-system-dev,
               libboost-filesystem-dev
Standards-Version: 4.5.1
Homepage: https://github.com/hyprwm/Hyprland

Package: hyprmoon
Architecture: any
Depends: ${shlibs:Depends}, ${misc:Depends},
         libwayland-server0,
         libinput10,
         libxkbcommon0,
         libpixman-1-0,
         libcairo2,
         libdrm2,
         libxcb1,
         libpango-1.0-0,
         libgdk-pixbuf2.0-0,
         libseat1,
         libudev1,
         libsystemd0,
         libtomlplusplus3,
         libzip4,
         librsvg2-2,
         libmagic1,
         libhyprlang2,
         libhyprutils1,
         libcurl4,
         libssl3t64,
         libgstreamer1.0-0,
         libgstreamer-plugins-base1.0-0,
         libenet7,
         libfmt9,
         libboost-system1.83.0,
         libboost-filesystem1.83.0
Provides: x-window-manager
Conflicts: hyprland
Replaces: hyprland
Description: HyprMoon - Hyprland with Moonlight streaming integration
 HyprMoon is a modified version of Hyprland that includes built-in
 Moonlight streaming capabilities for remote desktop access.
 .
 This package provides the HyprMoon compositor with moonlight integration,
 allowing you to stream your Wayland desktop over the network using the
 Moonlight protocol.
EOF

# Create debian/rules file
RUN cat > debian/rules << 'EOF'
#!/usr/bin/make -f

%:
	dh $@ --buildsystem=meson

override_dh_auto_configure:
	meson setup obj-x86_64-linux-gnu \
		--buildtype=release \
		--prefix=/usr \
		--libdir=lib \
		-Dwith_moonlight=true \
		-Dlegacy_renderer=disabled \
		-Dxwayland=disabled

override_dh_auto_build:
	ninja -C obj-x86_64-linux-gnu

override_dh_auto_install:
	dh_auto_install
	# Install HyprMoon binary
	mkdir -p debian/hyprmoon/usr/bin
	install -m 755 obj-x86_64-linux-gnu/src/Hyprland debian/hyprmoon/usr/bin/hyprmoon
	# Create symlink for compatibility
	ln -sf hyprmoon debian/hyprmoon/usr/bin/Hyprland-hyprmoon
	# Install moonlight libraries
	mkdir -p debian/hyprmoon/usr/lib/hyprmoon
	find obj-x86_64-linux-gnu -name "*.so*" -type f -exec install -m 644 {} debian/hyprmoon/usr/lib/hyprmoon/ \;
	# Install configuration files
	mkdir -p debian/hyprmoon/etc/hyprmoon
	if [ -f hyprland.conf ]; then install -m 644 hyprland.conf debian/hyprmoon/etc/hyprmoon/; fi
	if [ -f test_hyprland.conf ]; then install -m 644 test_hyprland.conf debian/hyprmoon/etc/hyprmoon/; fi

override_dh_auto_clean:
	dh_auto_clean || true
	rm -rf obj-x86_64-linux-gnu || true
EOF

# Create debian/changelog
RUN cat > debian/changelog << 'EOF'
hyprmoon (1.0-1) unstable; urgency=medium

  * Initial release of HyprMoon
  * Hyprland with integrated Moonlight streaming support
  * Built from custom wlroots with moonlight patches

 -- HyprMoon Developer <dev@hyprmoon.local>  Thu, 12 Sep 2025 23:00:00 +0000
EOF

# Create debian/compat
RUN echo "12" > debian/compat

# Create debian/copyright
RUN cat > debian/copyright << 'EOF'
